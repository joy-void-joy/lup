{
  "description": "Lup workflow hooks: permissions, pre-push quality checks, and test file protection",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "WebFetch",
        "hooks": [
          {
            "type": "command",
            "command": "uv run python ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/auto_allow_fetch.py",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "uv run python ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/auto_allow_bash.py",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "uv run python ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/pre_push_check.py",
            "timeout": 300
          },
          {
            "type": "command",
            "command": "uv run python ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/check_plan_md.py",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "uv run python ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/auto_allow_edits.py",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "uv run python ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/protect_tests.py",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
